{
    "name": "PokeBlockLauncher",
    "preductname": "PokeBlock Launcher",
    "version": "4.0.0",
    "description": "Launcher pour PokeBlock, le serveur Minecraft Pokemon sur PC",
    "main": "src/app.js",
    "author": {
        "name": "Luuxis, Ekoo, Inc.",
        "email": "contact@luuxis.fr",
        "url": "https://github.com/luuxis"
    },
    "url": "https://pokeblock.fr/launcherpatch",
    "scripts": {
        "start": "cross-env-shell NODE_ENV=dev electron .",
        "dev": "cross-env-shell DEV_TOOL=open nodemon --exec npm start",
        "build": "node build.js --obf=true --build=platform",
        "icon": "node build.js --icon=https://raw.githubusercontent.com/dodo0410/PKBS2Launcher/refs/heads/master/src/assets/images/background/icon.ico"
    },
    "license": "CCANC",
    "nodemonConfig": {
        "ext": "js,html,css",
        "ignore": "**/test"
    },
    "dependencies": {
        "electron-updater": "^6.6.2",
        "minecraft-java-core": "^4.2.3",
        "node-bdd": "^2.0.4",
        "node-fetch": "^2.7.0",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "cross-env": "^10.1.0",
        "electron": "^39.2.4",
        "electron-builder": "^26.0.12",
        "javascript-obfuscator": "^4.1.1",
        "jimp": "^1.6.0",
        "nodemon": "^3.1.11",
        "png2icons": "^2.0.1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dodo0410/PKBS2Launcher.git"
    }
}
